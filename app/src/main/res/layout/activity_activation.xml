<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_activation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aqua_society.movieprank.Activation">

    <include
        layout="@layout/splash"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/activation"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/ads_native" />

            <TextView
                android:text="أدخل الكود الذي توصلت به على بريدك الإلكتروني"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:textAlignment="center"
                android:layout_marginTop="25dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/code_pine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <EditText
                    android:id="@+id/input_code_pine"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="كود التفعيل"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/btn_activate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="تفعيل حسابي"
                android:layout_marginTop="25dp"
                android:textColor="@android:color/white" />


            <include layout="@layout/ads_bare" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
